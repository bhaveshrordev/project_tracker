<div class="relative p-5 rounded-xl border border-gray-200 shadow-sm bg-white hover:shadow-md transition duration-200">
  <div class="flex items-center justify-between mb-2">
    <div class="flex items-center gap-3">
      <div class="bg-blue-100 text-blue-700 font-semibold rounded-full w-9 h-9 flex items-center justify-center text-sm uppercase">
        <%= activity.user.name.first %>
      </div>
      <div>
        <p class="text-base text-gray-800 font-semibold">
          <%= activity.user.name %>
          <span class="text-sm text-gray-500 font-normal">
            â€¢ <%= time_ago_in_words(activity.created_at) %> ago
          </span>
        </p>
      </div>
    </div>
  </div>

  <% if activity.kind == "comment" %>
    <div class="text-gray-700 leading-relaxed text-base pl-12">
      <%= simple_format(activity.content) %>
    </div>
  <% else %>
    <div class="text-indigo-600 font-medium text-base pl-12">
      Status updated to:
      <span class="text-indigo-800 font-bold"><%= activity.content.humanize %></span>
    </div>
  <% end %>
</div>
