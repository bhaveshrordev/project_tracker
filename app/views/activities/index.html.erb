<!-- Back Button -->
<div class="mb-6">
  <%= link_to "← Back to Home", root_path, class: "inline-block px-4 py-2 bg-gray-100 text-gray-700 rounded-lg shadow-sm hover:bg-gray-200 transition" %>
</div>

<!-- Recorded Activities -->
<div class="mt-8">
  <h2 class="text-2xl font-semibold text-gray-800 mb-6">
    Recorded Activities (<%= @project.name.capitalize %>)
  </h2>

  <% if @activities.any? %>
    <div class="space-y-4">
      <% @activities.each do |activity| %>
        <%= render partial: "activities/activity_card", locals: { activity: activity } %>
      <% end %>
    </div>
  <% else %>
    <div class="text-center text-gray-500 text-base bg-gray-50 p-6 rounded-lg shadow-sm">
      No activities recorded yet for this project.
    </div>
  <% end %>
</div>
